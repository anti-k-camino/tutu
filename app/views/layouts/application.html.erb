<div class="container">
   <div class="row">
      <div class="col-md-12">
         <nav class="navbar navbar-default" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
               <ul class="nav navbar-nav">
                <% unless user_signed_in? %>
                  <li><%= link_to t('common.search_tickets'), new_search_path, class:'btn btn-primary outline'%></li>
                <% end %>
                  
                  <li><a href="http://www.thinknetica.com">Про Thinknetica</a></li>
                  <li class="dropdown">
                     <a class="dropdown-toggle" data-toggle="dropdown">Про меня<b class="caret"></b></a>
                     <ul class="dropdown-menu">
                        <li><a href="http://www.github.com/anti-k-camino">Мой гитхаб</a></li>   <li class="divider"></li>
                        <li><a href="http://www.facebook.com">facebook</a></li>
                        <li class="divider"></li>                        
                     </ul>
                  </li>
               </ul>
               <% if user_signed_in? %>
                <ul class="nav navbar-nav navbar-right">
                  <li><%= link_to t('common.search'), new_search_path %></li>
                  <li><%= link_to t('common.profile'), user_path(current_user)%></li>  
                  <li><%= link_to t('common.exit'), destroy_user_session_path, method: :delete %></li>
                </ul>
                <% if current_user.admin? %>
                  <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to t('common.admin'), toolbar_admin_user_path(current_user) %></li>
                  </ul>
                <% end %>
                <% else %>
                    <ul class="nav navbar-nav navbar-right">                      
                      <li><%=link_to t('common.registration'), new_user_registration_path%></li>
                        <li class="dropdown">
                          <a class="dropdown-toggle" data-toggle="dropdown"><%= t('common.enter') %><b class="caret"></b></a>
                          <ul class="dropdown-menu">
                            <li>
                                 <div class="row">
                                    <div class="col-md-12">                               
                                        <%= bootstrap_form_for(:user, :url => session_path(:user), :html => { :class => 'form-group' }, id:"login-nav") do |f| %>                                                      
                                          <%= f.text_field :email, placeholder:"email", hide_label: true%>         
                                          <%= f.password_field :password, placeholder:"password", hide_label: true %>                                    
