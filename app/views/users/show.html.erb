<p id="notice"><%= notice %></p>

<p>
  <strong> Имя пользователя : </strong>
  <%= @user.name %><br>
  <strong> Email :</strong>
  <%= @user.email %>
</p>
<p> Билеты у пользователя :</p>
<% if @user.tickets.empty? %>
  <p>У пользователя нету билетов</p>
<% else %>
  <ul>
   <% @user.tickets.each do |ticket| %>
    <li><%= link_to "#{ticket.number}", ticket_path(ticket) %></li>
   <% end %>
  </ul>
<% end %>

<%= link_to 'Редактировать', edit_user_path(@user) %> |
<%= link_to 'Главная', '/'%>