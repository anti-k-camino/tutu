<p id="notice"><%= notice %></p>

<p>
  <strong>Название:</strong>
  <%= @route.name %>
</p>

<% if @route.stations.empty? %>
  <p>В маршруте нету станций</p>
<% else %>
<h2>Расписание :</h2>
  <table>
    <thead>
      <tr>
        <td width="100px">Название</td>        
        <td>Позиция</td>        
      </tr>
    </thead>
    <tbody>
      <% @route.stations.ordered.each do |station|%>
        <tr>
          <td><%= station.name %></td>          
          <td>
            <%= form_tag update_position_station_path(station), method: :patch do %>              
              <%= number_field_tag :position, station.position_in(@route) %>  
              
              <%= label :arrival, "Прибытие :" %>
             <!-- <%= time_field_tag :arrival, station.schedule_at(@route, :arrival) %> -->
              <%= select_time( station.schedule_at(@route, :arrival), prefix: :arrival) %>
              
              <%= label :departing, "Отправка :"%>
              <%= time_field_tag :departing, station.schedule_at(@route, :departing) %>
                                     
              <%= hidden_field_tag :route_id, @route.id %>
              <%= submit_tag "Изменить" %>
            <% end %>
          </td>        
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% if @route.trains.empty? %>
  <h2>На маршруте нету поездов</h2>
<% else %>
  <h2>На маршруте следующие поезда : </h2>
  <ul>
    <% @route.trains.each do |train|%>
      <li><%= train.number %></li>
      <% end %>
  </ul>
<% end %>

<%= link_to 'Редактировать', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %><br>
<%= link_to 'Главная', '/'%>