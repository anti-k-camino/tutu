
<h1><%= t('.title') %></h1>
<% if !@routes.empty? %>
  <% @routes.each do |route|%>
    <div class="list-group">
      <%= route.name %>
        <% if route.trains.count > 0 %>
          <% route.trains.each do |train|%>
            <%= "Поезд номер #{train.number}" %><br>               
            <ul class='list-group'>
              <li class='list-group-item'> <%= @start.name %><br>
                <%= t('common.arrival') %>    
                <%= @start.schedule_at(route, :arrival).to_s(:time) %>
                <%= t('common.diparture') %>
                <%= @start.schedule_at(route, :departing).to_s(:time) %>
              </li> 
              <li class='list-group-item'> <%= @finish.name %><br>
                <%= t('common.arrival') %>
                <%= @finish.schedule_at(route, :arrival).to_s(:time) %>
                <%= t('common.diparture') %>
                <%= @finish.schedule_at(route, :departing).to_s(:time) %>
              </li>            
            </ul>            
            <%= link_to t('.buy_ticket'), new_ticket_path(ticket: { train_id: train, start_station_id: params[:start_station], finish_station_id: params[:finish_station]}), class:'btn btn-success'%> <br><br>                    
          <%end%>
        <% else %>
          <h3><%= t('common.nothing_found')%></h3>
        <% end %>
    </div>
  <% end %>
<% else %>
  <h3><%= t('common.nothing_found')%></h3>
<% end %>
<div class='btn-group'>  
  <%= link_to t('common.main'), root_path, class:'btn'%>
  <%= link_to t('.new_search'), new_search_path, class:'btn' %> 
</div>

