<%= form_for [:admin, @train, @carriage.becomes(Carriage)] do |f|%>
<%= render 'common/errors', resource: @carriage %>
<div class="field">
  <%= f.label :number %>
  <%= f.number_field :number %>
</div>
<div class="field"> 
  <%= f.label :type %>     
  <%= f.select(:type, options_for_select([:CoupeCarriage, :EconomyCarriage, :SvCarriage, :SitonlyCarriage])) %>
</div>  
<div class="field">
  <%= f.label :top_seats %>     
  <%= f.number_field :top_seats %>
</div> 
<div class="field">
  <%= f.label :bottom_seats %>     
  <%= f.number_field :bottom_seats %>
</div> 
<div class="field">
  <%= f.label :side_top_seats %>     
  <%= f.number_field :side_top_seats %>
</div> 
<div class="field">
  <%= f.label :side_bottom_seats %>     
  <%= f.number_field :side_bottom_seats %>
</div> 
<div class="field">
  <%= f.label :sitonly_seats %>     
  <%= f.number_field :sitonly_seats %>
</div> 
<div class="actions">   
  <%= f.submit t('.submit', action: @carriage.new_record? ? t('common.create') : t('common.edit')) %>
</div>
<% end %>