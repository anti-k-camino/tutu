
<div class="container">    
  <div calss="row" style="margin-top:50px;">
    <div class="col-xs-12 col-sm-6">
      <%= bootstrap_form_for([:admin, station]) do |f| %>
        <%= render 'common/errors', resource: station %>
        <div class="field ">          
          <%= f.text_field :name %>
        </div>
        <div class="actions">
          <%= f.submit t('.submit', action: station.new_record? ? t('common.create') : t('common.edit')) %>
        </div>
      <% end %>
    </div>
  </div>
</div>