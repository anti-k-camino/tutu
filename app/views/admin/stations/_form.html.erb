

      <%= bootstrap_form_for [:admin, station], html:{ style: "display: #{ hidden ? 'none' : 'block'}"} do |f| %>
        <%= render 'common/errors', resource: station %>
        <div class="field ">          
          <%= f.text_field :name %>
        </div>
        <div class="actions">
          <%= f.submit t('.submit', action: station.new_record? ? t('common.create') : t('common.edit')) %>
        </div>
      <% end %>
  