<div class='container'>
  <div class='col-sm-4'>
    <%= bootstrap_form_for([:admin, @ticket]) do |f| %>
      <p>
        <%=  f.hidden_field :train_id, value: @ticket.train_id %>      
        <%=  f.hidden_field :start_station_id, value: @ticket.start_station_id %>
        <%=  f.hidden_field :finish_station_id, value: @ticket.finish_station_id %>      
      </p>
      <div class="field">    
        <%= f.text_field :number %>
      </div> 
        </p>
      <div class="field">    
        <%= f.text_field :name %>
      </div> 
      <div class="field">    
        <%= f.text_field :surname %>
      </div> 
     
      <div class="actions">
        <%= f.submit t('common.edit'), method: :patch%>
      </div>
    <% end %>
  </div>
</div>