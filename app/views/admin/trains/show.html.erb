<p>
  <strong> <%= t('.number')%></strong>
  <%= @train.number %>
</p>
<p>
  <strong><%= t('.station') %></strong>
  <% if @train.station.present? %>
    <%= @train.station.name %>
  <% else%>
    <%= t('common.nothing_mentioned')%>
  <% end %>
</p>
<p>
  <strong><%= t('.route')%></strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else%>
    <%= t('common.nothing_mentioned')%>
  <% end %>
</p>
<p>
  <strong><%= t('.carriages_quantity') %></strong>
  <%= @train.carriages.count %><br>
  <strong><%= t('.coupe') %></strong>  
  <%= render 'links', resource: :CoupeCarriage %>
  <strong><%= t('.economy') %></strong> 
  <%= render 'links', resource: :EconomyCarriage %> 
  <strong><%= t('.sv') %></strong> 
  <%= render 'links', resource: :SvCarriage %>  
  <strong><%= t('.sit') %></strong> 
  <%= render 'links', resource: :SitonlyCarriage %>   
</p>

<%= link_to t('common.edit'), edit_admin_train_path(@train) %> |
<%= link_to t('common.back'), admin_trains_path %><br>
<%= link_to t('common.main'), root_path %>
